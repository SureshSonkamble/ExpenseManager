<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sonkamble.app.expense">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/expenses"
        android:label="@string/app_name"
        android:roundIcon="@drawable/expenses"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="sonkamble.app.expense.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sonkamble.app.expense.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="sonkamble.app.expense.AddExpense"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="sonkamble.app.expense.Expense_Reports"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>